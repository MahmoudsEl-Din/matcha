extends layout

block content

    div.p-5.mt-5.mb-5.container.text-center(style="background-color: white;border-radius: 2px;padding-left:50px;padding-right:50px;")
        -if (type === 1)
            h2.text-success.text-align-center Your account is now activated, go login and choper de la go sa m√®re
        -else if (type === 2)
            form#form_change.container(method="POST").text-center
                div.w-100.pb-2.justify-content-center.border.border-top-0.border-left-0.border-right-0
                    h1.sarina Reset your password
                div.form-group.row.justify-content-center
                    label(for="username") Username
                    div.w-100
                    input#username.form-control(type="text" placeholder="Enter username" name="username").col-2
                div.form-group.row.justify-content-center
                    label(for="password") New Password
                    div.w-100
                    input#password.form-control(type="password" placeholder="Enter new password" name="password" data-toggle="tooltip" data-placement="right" title="Contain at least 8 characters, 1 number, 1 lowercase character (a-z), 1 uppercase character (A-Z) and contains only 0-9a-zA-Z").col-3
                div.form-group.row.justify-content-center
                    label(for="cpassword") Confirm  new password
                    div.w-100
                    input#cpassword.form-control(type="password" placeholder="Confirm new password" name="cpassword").col-3
                div.w-100.d-flex.justify-content-center.form-group
                    p#return-change.text-danger
                button#button_change_password(type="submit").btn.btn-primary Submit
                script(src="assets/javascript/reset_password.js")