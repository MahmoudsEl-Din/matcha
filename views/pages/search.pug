extends layout

block content

    div.search-card.card.col-6.container-fluid(style=': 55rem')
        div.card-block
            .search-title.muffin.border.border-top-0.border-left-0.border-right-0.text-center
                h2.mb-3 Rechercher un membre
            .search-container
                form#search-form(action="POST")
                    .age-range
                        p
                            label(for="ageRange") Par âge :
                            input.range#ageRange(type="text" readonly style="border:0; color:#f6931f; font-weight:bold;")
                        div#ageslider-range
                    .pop-range
                        p
                            label(for="popRange") Par Score de popularité :
                            input.range#popRange(type="text" readonly style="border:0; color:#f6931f; font-weight:bold;")
                        div#popslider-range
                    .geo-range
                        p
                            label(for="geoRange") Par Localisation :
                            input.range#geoRange(type="text" readonly style="border:0; color:#f6931f; font-weight:bold;")
                        div#geoslider-range
                    .tag-pool
                        label(for="tags") Par tags :
                        div#div_user_tags.text-center
                        input#profil_tag.form-control(type="text" placeholder="Search tag" maxlength="249" name="profil_bio")
                        div#div_list_tags(style= "overflow-y: auto;")
                        div.w-100.d-flex.justify-content-center.form-group
                            p#return_tags.text-danger

                    div.row.mt-5
                        div.col-4
                        div.col-4
                            button#search-button.w-100(type="submit" style="margin-left:auto;").btn.btn-primary Rechercher        
                        div.col-4
                        
        script(src="assets/javascript/search.js")
        script(src="assets/javascript/tagsinput.js")
