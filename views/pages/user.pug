extends layout
        
block content
        
        div.mt-5.mb-5.container.text-center(style="background-color: white;border-radius: 2px;padding-left:50px;padding-right:50px;").pb-4

                div.pb-2.form-group.row.justify-content-center.mt-5.border.border-top-0.border-left-0.border-right-0
                        h1#username.sarina= user['username']

                div.w-100.d-flex.justify-content-between
                        div#connected.muffin
                        div#popuz
                                span Points de popularit√©
                                h4.muffin#label_popularity(for="profil_popularity")= user['pop']
                div.form-group.row.justify-content-center
                        div.col-6
                                h4#other_like.muffin

                div.row-8.p-4.container-fluid#div_pictures(style="height: 400px; border-radius: 2px;").border.border-top-0.border-left-0.border-right-0
                        div.row.justify-content-center(style={height:'73%', padding:'1%'})
                                div.col-3.h-100.w-100
                                        img(src="/assets/ressources/white.png" style="border: 1px solid red;border-radius: 500px 500px 500px 500px;").img-circle.border.img-responsive.h-100#img1.picture_none
                        div.row.d-flex.justify-content-around(style={height:'25%'})
                                div.col-2.h-100.w-100
                                        img(src="/assets/ressources/white.png" style="border: 1px solid red;border-radius: 500px 500px 500px 500px;").img-circle.border.img-responsive.h-100#img2.picture_none
                                        div.picture_tools.w-100.d-none.container
                                div.col-2.h-100.w-100
                                        img(src="/assets/ressources/white.png" style="border: 1px solid red;border-radius: 500px 500px 500px 500px;").img-circle.border.img-responsive.h-100#img3.picture_none
                                        div.picture_tools.w-100.d-none.container
                                div.col-2.h-100.w-100
                                        img(src="/assets/ressources/white.png" style="border: 1px solid red;border-radius: 500px 500px 500px 500px;").img-circle.border.img-responsive.h-100#img4.picture_none
                                        div.picture_tools.w-100.d-none.container
                                div.col-2.h-100.w-100
                                        img(src="/assets/ressources/white.png" style="border: 1px solid red;border-radius: 500px 500px 500px 500px;").img-circle.border.img-responsive.h-100#img5.picture_none
                                        div.picture_tools.w-100.d-none.container

                div.row.d-flex.w-75.justify-content-around.mt-4.pb-4.mr-auto.ml-auto.border.border-top-0.border-left-0.border-right-0
                        div
                                button#like(type="submit").btn.btn-success Like                        
                                div#return_like
                        div
                                button#report(type="submit").btn.btn-warning Report fake account
                                div#return_report
                        div
                                button#block(type="submit").btn.btn-danger Block user
                                div#return_block                                                 


                div.form-group.row.justify-content-center.mb-1
                        div.col-2
                                label#label_firstname.muffin(for="profil_firstname")= user['name']

                div.form-group.row.justify-content-center.mb-1
                        div.col-2
                                label#label_lastname.muffin(for="profil_lastname")= user['lastname']

                div.form-group.row.justify-content-center.mb-1
                        div.col-2
                                label#label_gender.muffin(for="profil_gender")= user['genre']

                div.form-group.row.justify-content-center.mb-1
                        div.col-2
                                label#label_desire.muffin(for="profil_desire")= user['desire']

                div.form-group.row.justify-content-center.mb-3.border.border-top-0.border-left-0.border-right-0
                        div.col-2
                                label#label_age.muffin(for="profil_age")= user['age']

                div.form-group.row.justify-content-center.mb-3.border.border-top-0.border-left-0.border-right-0
                        div.col-2
                                h3.muffin Biography
                        div.w-100                        
                        div.w-50
                                label#label_bio.muffin(for="profil_bio")= user['bio']
                        div.w-100

                div.form-group.row.justify-content-center.mb-3.border.border-top-0.border-left-0.border-right-0
                        div.col-2.mb-4
                                h3.muffin Tags
                        div.w-100                        
                        div#div_user_tags.col-4.mb-3(style="max-height:200px;overflow:auto;")

                script(src="assets/javascript/user.js")